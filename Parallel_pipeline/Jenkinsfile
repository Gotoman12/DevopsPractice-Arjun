pipeline{
    agent none
    stages{
        stage("Build stage"){
           parallel{
             stages{
                stage("checkin stage"){
                    agent any
                    steps{
                        sh '''
                        echo "first stage"
                        '''
                    }
                }
                stage("deploy stage"){
                    steps{
                        sh '''
                        echo "deploy stage"
                        '''
                    }
                }
            }
           }

        }
        stage("test stage"){
            stages{
                stage("checkin test"){
                    steps{
                        sh ''' 
                        echo "checkin test"
                        '''
                    }
                }
                stage("deploy test"){
                    steps{
                        sh '''
                        echo "deploy test"
                        '''
                    }
                }
                stage("dev test"){
                    steps{
                        sh '''
                        echo "dev test"
                        '''
                    }
                }
            }

        }
    }
}