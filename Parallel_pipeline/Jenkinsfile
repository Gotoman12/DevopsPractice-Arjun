pipeline {
    agent any
    stages{
        stage("First stage on window"){
            parallel{
                   stage("Checkin Code"){
                    
                    steps{
                        sh '''
                        echo "checking code"
                        '''
                    }
                   }
                   stage("Checkin out"){
                    
                    steps{
                        sh '''
                        echo "checking out"
                        '''
                    }
                   }
            }
        }
        stage("Deploy"){
            steps{
                sh '''
                   echo "Deploy code"
                '''
            }
        }
        stage("Test Code"){
            parallel{
                stage("Test in S1T"){
                    
                    steps{
                        sh '''
                           echo "validate the application in S1T"
                        '''
                    }
                }
                stage("Test in PPRD"){
                    
                    steps{
                        sh '''
                           echo "validate the application in PPRD"
                        '''
                    }
                }
                stage("Test in PROD"){
                  
                    steps{
                        sh '''
                           echo "validate the application in PROD"
                        '''
                    }
                }
                
            }
        }
    }
}