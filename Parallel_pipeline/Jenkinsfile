pipeline{
    agent any
    stages{
        stage("Build stage"){
           parallel{
                stage("checkin stage"){
                    steps{
                        sh '''
                        echo "first stage"
                        '''
                    }
                }
                stage("deploy stage"){
                    steps{
                        sh '''
                        echo "deploy stage"
                        '''
                    }
                }
            
           }

        }
        stage("Deploy Build"){
            steps{
                sh '''
                        echo "deploy build"
                        '''
            }
        }
        stage("Test Build"){
            parallel{
                stage("Test s1t env"){
                    sh '''
                        echo "deploy build"
                        '''
                }
                stage("Test pprd env"){
                    sh '''
                        echo "deploy build"
                        '''
                }
            }
        }
        
}
}