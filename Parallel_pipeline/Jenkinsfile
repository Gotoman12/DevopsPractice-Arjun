pipeline{
    agent any
    stages{
        stage("Build stage"){
           parallel{
                stage("checkin stage"){
                    steps{
                        sh '''
                        echo "first stage"
                        '''
                    }
                }
                stage("deploy stage"){
                    steps{
                        sh '''
                        echo "deploy stage"
                        '''
                    }
                }
            
           }

        }
        stage("Deploy Build"){
            steps{
                sh '''
                        echo "deploy build"
                        '''
            }
        }
        stage("Test deploy"){
            parallel{
                stage("GIT-COMMIT"){
                    steps{
                        git url: "https://github.com/Gotoman12/DevopsPractice-Arjun.git", branch:"jenkins"
                    }

                }
                stage("GIT"){
                    steps{
                        git status
                    }
                    

                }
            }
        }
  }
}